# Server Configuration
PORT=8000
NODE_ENV=development
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/mood_journal

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis (for background jobs and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# OpenAI API (for mood analysis and insights)
OPENAI_API_KEY=your-openai-api-key

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=mood-journal-uploads

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10MB
ALLOWED_AUDIO_FORMATS=webm,mp3,wav,m4a

# Speech-to-Text (if using external service)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=
GOOGLE_SPEECH_CREDENTIALS=

# Analytics
PLAUSIBLE_DOMAIN=
PLAUSIBLE_API_HOST=

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Background Jobs
ENABLE_EMAIL_QUEUE=true
ENABLE_ANALYSIS_QUEUE=true

# Features
ENABLE_INSIGHTS=true
ENABLE_EXPORT=true
ENABLE_NOTIFICATIONS=true
DAILY_REMINDER_TIME=09:00

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook (for integrations)
WEBHOOK_SECRET=
WEBHOOK_URL=